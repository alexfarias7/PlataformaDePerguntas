<%- include('partials/header.ejs') %>

<body>
  <%- include('partials/navbar.ejs') %>

  <div class="container">
    <hr />
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form method="post" action="/responder"><!-- * o formulario aponta para a rota responder -->

        <h3>Digite uma resposta:</h3>
        
        <textarea name="corpo" placeholder="Digite uma resposta" class="form-control"></textarea>
        <input type="hidden" name="pergunta" value="<%= pergunta.id %>" >
        <button class="btn btn-primary btn-resposta" type="submit">Responder</button>
    </form>

    <hr>

    <h3>
    Respostas
    </h3>

    <hr>
    <% respostas.forEach(resposta=>{%>
        <div class="card">
            <div class="card-body card-resposta"></div>
            <p class="par-resposta"><%= resposta.corpo %></p>
        </div>
    <% }) %>
  </div>
</body>

<%- include('partials/footer.ejs') %>
